<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <com.ns.yc.yccustomtextlib.edit.view.HyperTextEditor
            android:id="@+id/HTE_edit_doc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:background="@color/background"
            app:editor_layout_top_bottom="16dp"
            app:editor_layout_right_left="16dp"
            app:editor_text_line_space="6dp"
            app:editor_image_height="250dp"
            app:editor_image_bottom="10dp"
            app:editor_text_size="16sp"
            app:editor_del_icon_location = "bottom_right"
            app:editor_text_color="@android:color/black"/>
    </ScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFFFFF">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/TextView_Edit_Bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:text="@string/text_fragment_edit_doc_bold"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>