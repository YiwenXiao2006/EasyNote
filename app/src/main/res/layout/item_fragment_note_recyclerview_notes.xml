<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="168.75dp"
    android:layout_height="225dp">

    <com.XYW.easynote.ui.RoundImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:radius="5dp"
        app:srcCompat="@color/lightbackground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <com.XYW.easynote.ui.RoundImageView
            android:id="@+id/RoundImageView_noteImg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/TextView_noteTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:maxEms="8"
            android:ellipsize="end"
            android:textSize="15sp"
            android:textColor="@color/text"
            android:textStyle="bold" />
    </LinearLayout>

    <com.XYW.easynote.ui.RoundImageView
        android:id="@+id/RoundImageView_noteIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_fragment_note_recyclerview_icon"
        app:radius="5dp" />
</RelativeLayout>